<div class="container">  
  <h1 class="title">Liste des évènements</h1>
  <div class="container">
    <% @events.each do |event| %>
      <div class="row">
        <div class="col-lg">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= event.name %></h5>
                <p class="card-text"><%= event.description %></p>
                <p class="card-link"><%= link_to "See details", event_path(event)  %></p>
              </div>
            </div>

      </div> 
    </div>
    <% end %>
  </div>
  <button class="btn btn-success"><%= link_to "Nouvel évènement ?", new_event_path %></button>
</div>
